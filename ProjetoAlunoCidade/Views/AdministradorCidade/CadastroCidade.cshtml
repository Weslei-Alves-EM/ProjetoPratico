@model EM.Domain.Cidade

@{
    bool isEdicao = ViewBag.IsEdicao ?? false;
    string titulo = isEdicao ? "Editar Cidade" : "Cadastrar Cidade";

    ViewData["Title"] = titulo;
}

<body>
    <div class="d-flex justify-content-center align-items-center" style="height: 75vh;">
        <div class="col-md-6">
            <form method="post" asp-controller="AdministradorCidade" asp-action="CadastroCidade">
                <h1 class="text-center">@ViewData["Title"]</h1>
                <input type="hidden" asp-for="Id_cidade" />
                <input type="hidden" id="isEdicao" name="isEdicao" value="@isEdicao" />
                <div class="form-row">
                    <!-- Nome -->

                    <div class="form-group col-9">
                        <label asp-for="Nome">Nome</label>
                        <input asp-for="Nome" class="form-control" value="@Model.Nome" />
                    </div>
                    <!-- UF -->

                    <div class="form-group col-3">
                        <label asp-for="UF">UF</label>
                        <input asp-for="UF" class="form-control" value="@Model.UF" />
                    </div>
                </div>
                <!-- Botao salvar/voltar-->

                <div class="d-grid gap-2 d-md-block">
                    <button type="submit" class="btn btn-fixed-width dev-bg-color-musgo text-white">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</body>
    